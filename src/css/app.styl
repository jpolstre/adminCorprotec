// app global css
@import 'core/motion'
@import 'quasar.variables'
body
	// font-family 'Open Sans', sans-serif
	font-family: 'Poppins', sans-serif
	color $grey-8
.q-header
	border-bottom 1px solid #a2dfe5


/*NAV*/
.nav 
	.q-btn__content
		// font-family 'Dosis', sans-serif
		
.q-menu
		// font-family 'Dosis', sans-serif

	

		
/*index section hero*/
#main
	.benefits
		z-index 0
		background 0 0
		padding-bottom 3em
		.background
			bottom 0
			position absolute
			top 0
			-webkit-transform-origin 0
			transform-origin 0
			&.is-dark
				left -10%
				-webkit-transform skewY(8deg)
				transform skewY(8deg)
				width 110%
				z-index -1
			&.is-primary
				left 100%
				-webkit-transform scaleX(-1) skewY(7deg)
				transform scaleX(-1) skewY(7deg)
				width 100%
				z-index -2
	ul
		list-style none
		margin 0
		padding 0

.background.is-dark,.hero.is-dark
	background-color #263238
	color #f5f5f5

.hero
	padding 0 10rem
	position relative
	-webkit-box-align stretch
	-ms-flex-align stretch
	align-items stretch
	display -webkit-box
	display -ms-flexbox
	display flex
	-webkit-box-orient vertical
	-webkit-box-direction normal
	-ms-flex-direction column
	flex-direction column
	-webkit-box-pack justify
	-ms-flex-pack justify
	justify-content space-between

.hero-body
	-webkit-box-flex 1
	-ms-flex-positive 1
	flex-grow 1
	-ms-flex-negative 0
	flex-shrink 0
	padding 3rem 1.5rem
	// z-index 2

.is-shadowless
	-webkit-box-shadow none!important
	box-shadow none!important

.is-clipped
	overflow hidden!important

.background
	&.is-primary-gradient
		background-image linear-gradient(141deg,transparent 0,#4fb3bf 100%)
	&.is-primary
		background-color #4fb3bf
		color #fff

#frontend
	.hero-body,.navbar,.side-nav,h1,h2,h3,h4,h5,h6,.text-h1,.text-h2,.text-h3,.text-h4,.text-h5,.text-h6, .text-subtitle1
		// font-family 'Dosis', sans-serif

	.text-h1,.text-h2,.text-h3,.text-h4,.text-h5,.text-h6
		letter-spacing 10px
	
#main
	.col1
		margin-top 10rem
	img
		ax-width: 100%;
		height: auto;

	@media only screen and (max-width: 1024px)
		.col1
			margin-top 3rem
		img
			width 100%
		.hero
			padding 0 
			
